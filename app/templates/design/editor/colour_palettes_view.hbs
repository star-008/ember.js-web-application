                            }}
                                <i class="sprite-touch-btn-border-thicker"></i>
                            {{/sticky-button}}
                        {{else}}
                            {{view
                                "design/editor/colourPalette/colourPalette"
                                value=model.strokeStyle4
                                propertyName="strokeStyle4"
                                content=controller.recent3Stroke4Colours
                                location="mainPanel"
                                showMoreButton=true
                            }}
                            {{#view
                                "design/editor/sliderLayout"
                                labelName=(t 'editor.border_size')
                            }}
                                {{view
                                    "design/editor/noUiSlider"
                                    type="range"
                                    value=model.strokeWidth4
                                    prop='strokeWidth4'
                                    min="1"
