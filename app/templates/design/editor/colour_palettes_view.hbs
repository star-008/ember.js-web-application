                                class="border-thicker"
                            }}
                                <i class="sprite-touch-btn-border-thicker"></i>
                            {{/sticky-button}}
                        {{else}}
                            {{view
                                "design/editor/colourPalette/colourPalette"
                                value=model.strokeStyle3
                                propertyName="strokeStyle3"
                                content=controller.recent3Stroke3Colours
                                location="mainPanel"
                                showMoreButton=true
                            }}
                            {{#view
                                "design/editor/sliderLayout"
                                labelName=(t 'editor.border_size')
                            }}
                                {{view
                                    "design/editor/noUiSlider"
                                    type="range"
                                    value=model.strokeWidth3
                                    prop='strokeWidth3'
                                    min="1"
                                    max="50"
                                    step="1"
                                }}
                            {{/view}}
                        {{/if}}
                        <button
                            {{action 'removeStroke' 3}}
                            class="removeBorder"
                        >
                            <i class="sprite-touch-btn-border-remove"></i>
                            <span
                                class="glyphicon glyphicon-remove remove-border-icon"
                                aria-hidden="true"
                            >
                            </span>
                            <span class="remove-border-text">
                                {{t 'editor.remove_border_btn_1'}}
                            </span>
                        </button>
                    </div>
                {{/if}}

                {{#if parentController.stroke4IsSelected }}
                    <div class="edit-border">
                        {{#if isTouch}}
                            <button
                                class="touch-control-button"
                                {{action "navigateToStroke4Subpanel"}}
