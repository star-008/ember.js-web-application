<div {{bind-attr class=":colour-clash-message hidden:hidden"}}>
    <div class="colour-clash-message-heading" {{action "bringForward"}}>
        <h3>{{t 'editor.colourClashMessage.editor.title' colourGroupName=colourGroupName}}</h3>
        <span class="sprite-extended-x" title="Close" {{action "remove"}}></span>
    </div>
    <div class="colour-clash-message-body">
        {{#each colourNamesList as |colourName index|}}
            <strong>"{{colourName}}"</strong>
            {{#unless (islast colourList index)}} {{t 'editor.colourClashMessage.editor.body.listSeparator'}} {{/unless}}
        {{/each}}
        {{t 'editor.colourClashMessage.editor.body.listEnding' positionName=positionName}}
        <p>{{t 'editor.colourClashMessage.editor.body.secondary'}}</p>
        <ul>
            {{#each colourList as |usedColour|}}
                <li {{action "changeAllColours" message usedColour}}>
                    <div {{bind-attr style="usedColour.style"}} class="colour-clash-colour-icon"></div>
                    <div class="colour-clash-colour-name">{{usedColour.colour.name}}
                        <span {{bind-attr style="usedColour.style"}} class="colour-clash-colour-name-underline"></span>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="colour-clash-message-footer">
        <label class="colour-clash-message-checkbox">
            {{t 'editor.colourClashMessage.editor.footer' colourGroupName=colourGroupName}}
            {{input type="checkbox" name="hideGroup" checked=hiddenGroup}}
            <div class="colour-clash-message-custom-checkbox">
                <span class="sprite-checkbox-tick" title="Do not show"></span>
            </div>
        </label>
    </div>
</div>